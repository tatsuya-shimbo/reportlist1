<div class="container cs-container2 mt-4">
  <%= render "layouts/flash_messages" %>
  <div class="row cs-box2 mt-4">
    <%= render "layouts/aside" %>
    <div class="col-sm-8">
      <div class="cs-white p-4">
        <h1 class="text-center mb-3">レポート情報</h1>
        <table class="table">
          <tr>
            <th>タイトル</th>
            <td><%= @report.title %></td>
          </tr>
          <tr>
            <th>ファイル</th>
            <td><%= link_to "ファイル", url_for(@report.repo) %></td>
          </tr>
          <tr>
            <th>実験日</th>
            <td>
              <%= @report.day/10000 %>年
              <%= (@report.day - @report.day/10000*10000)/100 %>月
              <%= @report.day - @report.day/100*100 %>日
            </td>
          </tr>
          <tr>
            <th>授業名</th>
            <td><%= @report.teaching %></td>
          </tr>
        </table>
        <div class="mt-3">
          <%= link_to "編集する", edit_report_path, class: "cs-edit-button btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

